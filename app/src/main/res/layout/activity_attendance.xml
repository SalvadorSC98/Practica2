<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AttendanceActivity">

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/app_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      android:theme="@style/Theme.Practica2.AppBarOverlay">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/toolbar_layout"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp280"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:toolbarId="@+id/toolbar"
        android:background="@color/ToolbarBackground">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp120"
          app:popupTheme="@style/Theme.Practica2.PopupOverlay" />

      <ImageView
          android:id="@+id/changeViewButton"
          android:layout_width="@dimen/dp40"
          android:layout_height="@dimen/dp40"
          android:layout_marginEnd="@dimen/dp16"
          android:layout_marginBottom="@dimen/dp16"
          app:layout_collapseMode="pin"
          app:srcCompat="@drawable/tablemode"
          android:layout_gravity="bottom|end"/>


      <TextView
          android:id="@+id/nameLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/dp120"
          android:layout_marginBottom="@dimen/dp100"
          android:text="@string/prueba"
          android:textSize="@dimen/sp20"
          app:layout_constraintStart_toEndOf="@id/personImage"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_collapseMode="pin"
          android:layout_gravity="bottom"/>

      <ImageView
          android:id="@+id/backArrow"
          android:layout_width="@dimen/dp40"
          android:layout_height="@dimen/dp35"
          android:layout_marginStart="@dimen/dp16"
          android:layout_marginTop="@dimen/dp16"
          android:clickable="true"
          app:srcCompat="@drawable/backarrow"
          android:focusable="true"
          app:layout_collapseMode="pin" />

      <ImageView
          android:id="@+id/personImage"
          android:layout_width="@dimen/dp70"
          android:layout_height="@dimen/dp70"
          android:layout_marginStart="@dimen/dp45"
          android:layout_marginBottom="@dimen/dp100"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/backArrow"
          app:srcCompat="@drawable/personimage"
          app:layout_collapseMode="pin"
          android:layout_gravity="bottom"/>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
  </com.google.android.material.appbar.AppBarLayout>

  <androidx.core.widget.NestedScrollView
      android:id="@+id/nestedScrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!-- Contenido debajo de la CollapsingToolbarLayout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
